<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_spender"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/new_spender_tittle"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/new_spender"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/empty_label"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp" />
        <Button
            android:id="@+id/add_new_spender_button"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:background="@color/green"
            android:textAlignment="center"
            android:text="Add"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/spender_name_label"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/name"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/spender_name_textfield"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/light_grey"
            android:gravity="start"
            android:layout_weight="2"
            android:textColor="@color/black"/>
    </LinearLayout>
    <include
        android:id="@+id/spenders_image_list"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/content_grid_layout" />
</LinearLayout>